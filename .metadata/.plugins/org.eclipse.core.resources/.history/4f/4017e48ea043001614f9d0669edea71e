		{
			sender.sendMessage(ChatColor.RED + "Only for Players");
			return true;
		}
		
		Player me = (Player)sender;
		
		if(cmd.getName().equalsIgnoreCase("setminkit"))
		{
			
		}
		else if(cmd.getName().equalsIgnoreCase("setmaxkit"))
		{
			
		}
		
		
		
		
		
		return true;
	}

}
